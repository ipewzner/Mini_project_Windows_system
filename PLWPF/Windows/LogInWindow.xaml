<Window x:Class="PLWPF.LogInWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PLWPF.Windows"
        mc:Ignorable="d"
        Title="LogInWindow" Height="450" Width="800">
    <Grid>
        <Label Content="LOG-IN" FontSize="36" HorizontalAlignment="Left" Margin="321,39,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.563,0.549"/>
        <ComboBox x:Name="HostComboBox" Text="USER" HorizontalAlignment="Left" Margin="329,122,0,0" VerticalAlignment="Top" Width="120"  RenderTransformOrigin="1.106,2.024" SelectionChanged="Host_SelectionChanged"/>
        <TextBox x:Name="Password"  Text="Password" HorizontalAlignment="Left" Height="23" Margin="329,171,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" TextChanged="Password_TextChanged"/>
        <Button Content="ENTER" HorizontalAlignment="Left" Margin="355,229,0,0" VerticalAlignment="Top" Width="75" Click="ENTER_Click"/>
        <Button Content="REGISTER" HorizontalAlignment="Left" Margin="355,275,0,0" VerticalAlignment="Top" Width="75" Click="Register_Click"/>

    </Grid>
</Window>
