<Window x:Class="PLWPF.HostUpdateWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PLWPF"
        Closed="Window_Closed"
        mc:Ignorable="d"
        Title="HostUpdateWindow" Height="600" Width="800">
    <Grid>
        <TabControl HorizontalAlignment="Stretch"   VerticalAlignment="Stretch" >
            <TabItem Header="Update Host">
                <Grid>
                    <Frame x:Name="UpdateHostFrame" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
                </Grid> 
            </TabItem>
            <TabItem Header="Delete Host">
                <Grid>
                    <Frame x:Name="DeleteHostFrame" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
                </Grid> 
            </TabItem>
        </TabControl>

    </Grid>
</Window>
