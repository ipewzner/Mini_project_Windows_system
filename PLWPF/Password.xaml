<UserControl x:Class="PLWPF.Password"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PLWPF"
             mc:Ignorable="d" Height="30" Width="160.2">
    <Grid HorizontalAlignment="Stretch"  VerticalAlignment="Stretch" Margin="0,0,-0.2,0.4" >
        <PasswordBox x:Name="PasswordHidden"   PasswordChanged="Password_PasswordChanged" 
                     HorizontalAlignment="Left" 
                     VerticalAlignment="Top" Width="120" Height="30"/>

        <TextBox x:Name="PasswordUnmask" Visibility="Hidden" HorizontalAlignment="Left"  VerticalAlignment="Top" Width="120" Height="30"/>

        <Label x:Name="ShowPassword" 
            Content="Show" 
            PreviewMouseDown="ShowPassword_PreviewMouseDown"
            PreviewMouseUp="ShowPassword_PreviewMouseUp" 
            MouseLeave="ShowPassword_MouseLeave" 
            Height="30"  Margin="120,0,0,0" />

    </Grid>
</UserControl>
