<Window x:Class="PLWPF.SplashScreenWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        Closed="Window_Closed"
        ContentRendered="Window_ContentRendered"
        mc:Ignorable="d"
        Title="SplashScreenWindow"  Height="450" Width="600" 
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize" WindowStyle="None" >
    
    <Window.Background>
        <ImageBrush ImageSource="Windows/Image/1.jpg"/>
    </Window.Background>
    <Grid>
        <Label Content="Welcome" FontSize="60" HorizontalAlignment="Center" Margin="0,0,0,0" VerticalAlignment="Top"/>
        <ProgressBar x:Name="Progress"  Background="Transparent"  Minimum="0" Maximum="100" HorizontalAlignment="Stretch" Height="15" Margin="0,300,0,0"   />
        <Label Content="Refreshing the Database" HorizontalAlignment="Left" Margin="10,0,0,40" VerticalAlignment="Bottom"/>
        <Label x:Name="InfoLabel"   HorizontalAlignment="Left" Margin="10,0,0,25" VerticalAlignment="Bottom"/>

    </Grid>
</Window>
